{
  "name": "auth_remotes",
  "version": "0.1.0",
  "scripts": {
    "reset": "npx rimraf ./**/node_modules",
    "dev": "modern dev",
    "build": "modern build && pnpm sentry:sourcemaps",
    "start": "modern start",
    "serve": "modern serve",
    "new": "modern new",
    "lint": "modern lint",
    "prepare": "husky install",
    "upgrade": "modern upgrade",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org xavier-thomas --project javascript-react ./dist && sentry-cli sourcemaps upload --org xavier-thomas --project javascript-react ./dist"
  },
  "engines": {
    "node": ">=16.18.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "dependencies": {
    "@modern-js/plugin-tailwindcss": "2.58.3",
    "@modern-js/runtime": "2.58.3",
    "@module-federation/enhanced": "^0.6.0",
    "@module-federation/modern-js": "^0.6.0",
    "@sentry/cli": "^2.34.1",
    "@sentry/react": "^8.27.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.437.0",
    "react": "~18.2.0",
    "react-dom": "~18.2.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "web-vitals": "^4.2.3"
  },
  "devDependencies": {
    "@modern-js-app/eslint-config": "2.58.3",
    "@modern-js/app-tools": "2.58.3",
    "@modern-js/eslint-config": "2.58.3",
    "@modern-js/tsconfig": "2.58.3",
    "@types/jest": "~29.2.4",
    "@types/node": "~16.11.7",
    "@types/react": "~18.0.26",
    "@types/react-dom": "~18.0.10",
    "husky": "~8.0.1",
    "lint-staged": "~13.1.0",
    "prettier": "~2.8.1",
    "rimraf": "~3.0.2",
    "tailwindcss": "~3.3.3",
    "typescript": "~5.0.4"
  }
}